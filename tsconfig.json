{
  "extends": "@react-native/typescript-config",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "App.tsx",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ],
  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": true,
    "checkJs": false,
    "types": [
      "react",
      "react-native"
    ]
  }
}